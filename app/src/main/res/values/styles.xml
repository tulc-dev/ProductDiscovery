<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.ProductDiscovery" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black_10</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.ProductDiscovery" parent="Base.Theme.ProductDiscovery">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/sf_pro_text_semi_bold</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/sf_pro_text_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
